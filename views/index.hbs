                <div class="panel-group group2" id="accordion2" data-numofmovies="{{moviesNowShowing.numberOfMovies}}" role="tablist" aria-multiselectable="true">
                  {{#each moviesNowShowing.movies}}
                      <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingNS{{movieId}}">
                          <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion2" href="#collapseNS{{movieId}}" aria-expanded="false" aria-controls="collapseNS{{movieId}}">
                              {{title}} - {{releaseDate}}
                            </a>
                          </h4>
                        </div>
                        <div id="collapseNS{{movieId}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingNS{{movieId}}">
                          <div class="panel-body">
                            <!-- content for each movie -->
                            <img class="moviePoster" src="{{moviePic}}" alt="movie poster for {{title}}" />
                            <div class="movieInfo">
                              <p>{{movieCopy}}</p>
                              <h4 class="rating voteRating2{{@index}}" data-popularity="{{popularity}}">Votes({{votes}})
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></h4><br>
                              <h4 class="genre">{{genre}}</h4>
