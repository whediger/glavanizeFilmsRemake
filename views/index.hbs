    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">Movie Guide</h1>
                        <p class="intro-text">A free movie review app. With no advertisements</p>
                        <p class="intro-text">View top movie reviews currently in theatres</p>
                        <p>This product uses the TMDb API but is not endorsed or certified by TMDb</p>
                        <a href="#about" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Coming to theatres Section -->
    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Top 10 Movies coming to theatres</h2>
                <!-- accordion -->
                <div class="panel-group" id="accordion" data-numofmovies="{{numberOfMovies}}" role="tablist" aria-multiselectable="true">
                  {{#each movies}}
                      <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="heading{{movieId}}">
                          <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{movieId}}" aria-expanded="false" aria-controls="collapse{{movieId}}">
                              {{title}} - {{releaseDate}}
                            </a>
                          </h4>
                        </div>
                        <div id="collapse{{movieId}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{movieId}}">
                          <div class="panel-body">
                            <!-- content for each movie -->
                            <img class="moviePoster" src="{{moviePic}}" alt="movie poster for {{title}}" />
                            <div class="movieInfo">
                              <p>{{movieCopy}}</p>
                              <h4 class="voteRating{{@index}}" data-popularity="{{popularity}}">Votes({{votes}})
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></h4><br>
                              <h4 class="genre">{{genre}}</h4>
                            </div>
                          </div>
                        </div>
                      </div>
                  {{/each}}
                </div>
                <!-- accordion -->
            </div>
        </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="content-section text-center">
