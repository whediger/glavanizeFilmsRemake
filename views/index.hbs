    <!-- Coming to theatres Section -->
    <section id="comingSoon" class="sectionTitle container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>10 Most Popular Movies Showing Soon</h2>
                <!-- accordion -->
                <div class="panel-group group1" id="accordion1" data-numofmovies="{{upComingMovies.numberOfMovies}}" role="tablist" aria-multiselectable="true">
                  {{#each upComingMovies.movies}}
                      <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="heading{{movieId}}">
                          <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion1" href="#collapse{{movieId}}" aria-expanded="false" aria-controls="collapse{{movieId}}">
                              {{title}} - {{releaseDate}}
                            </a>
                          </h4>
                        </div>
                        <div id="collapse{{movieId}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{movieId}}">
                          <div class="panel-body">
                            <!-- content for each movie -->
                            <img class="moviePoster" src="{{moviePic}}" alt="movie poster for {{title}}" />
                            <div class="movieInfo">
                              <p>{{movieCopy}}</p>
                              <h4 class="rating voteRating1{{@index}}" data-popularity="{{popularity}}">Votes({{votes}})
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></h4><br>
                              <h4 class="genre">{{genre}}</h4>

                              <!-- trailer and calendarButtons +==}========> -->
                              <a href="http://www.google.com/calendar/event?action=TEMPLATE&text=Movie+Release+Date  Tomorrow:+{{title}}+{{releaseDate}}&dates={{isoDate}}/{{isoDate}}&details={{movieCopy}}" target="_blank" rel="nofollow">
                                <i class="fa fa-calendar calendarTrailerButtons" aria-hidden="true"></i>
                              </a>
                              <a href="/{{title}}.{{movieId}}">
                                <i class="fa fa-film calendarTrailerButtons" aria-hidden="true"></i>
                              </a>

                            </div>
                          </div>
                        </div>
                      </div>
                  {{/each}}
                </div>
                <!-- accordion -->
            </div>
        </div>
    </section>

    <!-- In theatres Now -->
    <section id="nowShowing" class="sectionTitle container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
