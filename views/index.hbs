
    <!-- Home Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">Movie Guide</h1>
                        <p class="intro-text">My movie review app With no advertisements</p>
                        <p><small>This product uses the TMDb API but is not endorsed or certified by TMDb</small></p>
                        <a href="#comingSoon" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Coming to theatres Section -->
    <section id="comingSoon" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>10 Most Popular Movies Coming to Theatres</h2>
                <!-- accordion -->
                <div class="panel-group" id="accordion" data-numofmovies="{{numberOfMovies}}" role="tablist" aria-multiselectable="true">
                  {{#each movies}}
                      <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="heading{{movieId}}">
                          <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{movieId}}" aria-expanded="false" aria-controls="collapse{{movieId}}">
                              {{title}} - {{releaseDate}}
                            </a>
                          </h4>
                        </div>
                        <div id="collapse{{movieId}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{movieId}}">
                          <div class="panel-body">
                            <!-- content for each movie -->
                            <img class="moviePoster" src="{{moviePic}}" alt="movie poster for {{title}}" />
                            <div class="movieInfo">
                              <p>{{movieCopy}}</p>
                              <h4 class="rating voteRating{{@index}}" data-popularity="{{popularity}}">Votes({{votes}})
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></h4><br>
                              <h4 class="genre">{{genre}}</h4>
                              <a href="http://www.google.com/calendar/event?action=TEMPLATE&text=Movie+Release+Date:+{{title}}&dates={{isoDate}}/{{isoDate}}&details={{movieCopy}}" target="_blank" rel="nofollow">
                              <span class="calendarButton"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                  {{/each}}
                </div>
                <!-- accordion -->
            </div>
        </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Search Theaters In Your Area</h2>
                    <font color="yellow"><p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i><font color="white">This feature is under construction and will not work</font><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></p></font>
                    <input type="number" name="name" value="" placeholder="not working">
                    <a href="http://startbootstrap.com/template-overviews/grayscale/" class="btn btn-default btn-lg">Change Location</a>
                </div>
            </div>
        </div>
    </section>
